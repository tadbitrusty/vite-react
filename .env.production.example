# Production Environment Configuration for ResumeSniper
# Copy to .env.production and fill in actual values

# Application
NODE_ENV=production
NEXT_PUBLIC_URL=https://resumevita.com

# Database (Supabase Production)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_production_service_role_key_here

# AI Service (Anthropic Claude)
ANTHROPIC_API_KEY=sk-ant-your_production_api_key_here

# Payment Processing (Stripe Live)
STRIPE_SECRET_KEY=sk_live_your_production_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret_here
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_your_production_publishable_key_here

# Email Service (Resend Production)
RESEND_API_KEY=re_your_production_resend_key_here
FROM_EMAIL=admin@resumevita.com

# Security
SESSION_SECRET=your_secure_session_secret_here
JWT_SECRET=your_secure_jwt_secret_here

# Monitoring (Optional)
SENTRY_DSN=https://your_sentry_dsn_here
DATADOG_API_KEY=your_datadog_key_here

# Feature Flags
ENABLE_RATE_LIMITING=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_CACHE=true
ENABLE_COMPRESSION=true

# Vercel Configuration (automatically set by Vercel)
# VERCEL_URL
# VERCEL_REGION
# VERCEL_DEPLOYMENT_ID